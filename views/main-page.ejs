<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />

    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
      integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2"
      crossorigin="anonymous"
    />

    <!-- My own css -->
    <link rel="stylesheet" href="/main-page.css" />

    <title>Sightings</title>
  </head>

  <body>
    <nav class="navbar fixed-top navbar-dark bg-dark navbar-expand-md">
      <a href="/" class="navbar-brand">Sightings</a>
      <button
        class="navbar-toggler"
        data-toggle="collapse"
        data-target="#navbar-menu"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbar-menu">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a href="/sighting" class="nav-link">create new sighting</a>
          </li>
          <li class="nav-item">
            <a href="/shapes" class="nav-link">sightings list by shape</a>
          </li>
        </ul>
      </div>
    </nav>

    <div class="container-fluid" id="sort-sightings-container">
      <div class="row justify-content-center">
        <div class="col-12">
          <h1>Sightings</h1>
        </div>

        <div class="col-12">
          <form action="/" method="GET" id="sort-drop-down">
            <label for="sortby">sort by:</label>
            <select
              name="sortby"
              id="sortby"
              class="form-control"
              placeholder="select category"
              required
            >
              <option value="" disabled selected hidden>Category</option>
              <option value="shape">shape</option>
              <option value="city">city</option>
            </select>
            <label for="sortOrder">order:</label>
            <select
              name="sortOrder"
              id="sortOrder"
              class="form-control"
              placeholder="select category"
              required
            >
              <option value="" disabled selected hidden>Order</option>
              <option value="asc">ascending</option>
              <option value="desc">descending</option>
            </select>
            <input
              type="submit"
              value="Submit"
              class="btn btn-primary"
              id="sort-button"
            />
          </form>
        </div>
      </div>
    </div>

    <div class="container" id="sightings-list-container">
      <div class="row justify-content-center">
        <div class="col-12">
          <h1 id="sighting-list-header">Sightings List</h1>
        </div>
      </div>

      <div class="row justify-content-center">
        <div class="col-3">
          <h4>Date</h4>
        </div>
        <div class="col-3">
          <h4>Shape</h4>
        </div>
        <div class="col-3">
          <h4>City</h4>
        </div>
        <div class="col-2"></div>
      </div>
    </div>

    <div class="container overflow-auto" id="sightings-items-container">
      <% sightings.forEach((element, index) => { %>
      <div class="row justify-content-center sightings">
        <div class="col-3">
          <p>
            <a class="badge badge-light" href="/sighting/<%= index %> "
              ><%= element.date_time %></a
            >
          </p>
        </div>
        <div class="col-3">
          <p><%= element.shape %></p>
        </div>
        <div class="col-3">
          <p><%= element.city %></p>
        </div>
        <div class="col-2">
          <form
            action="sighting/<%= element.index %>/delete?_method=DELETE"
            method="POST"
          >
            <input
              type="submit"
              value="Delete"
              class="btn btn-danger delete-button"
            />
          </form>
        </div>
      </div>
      <% }); %>
    </div>

    <!-- Bootstrap JS -->
    <script
      src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
      integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
      integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js"
      integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
